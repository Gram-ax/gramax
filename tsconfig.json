{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"declaration": true,
		"declarationMap": true,

		"target": "esnext",
		"experimentalDecorators": true,
		"noEmit": true,
		"lib": ["dom", "dom.iterable", "esnext"],

		"strict": false,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"incremental": true,

		"noImplicitOverride": false,
		"noImplicitThis": true,

		"noPropertyAccessFromIndexSignature": false,
		"strictFunctionTypes": false,
		"strictNullChecks": false,

		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "bundler",

		"paths": {
			"ics-ui-kit/*": ["node_modules/ics-ui-kit/dist/*"],
			"@components/*": ["core/components/*"],
			"@ui-kit/*": ["core/ui-kit/components/*"],
			"@dynamicImports/*": ["core/dynamicImports/*"],
			"@ext/*": ["core/extensions/*"],
			"@core/*": ["core/logic/*"],
			"@core-ui/*": ["core/ui-logic/*"],
			"@app/*": ["app/*"],
			"@app-plugins/git": ["apps/tauri/plugins/plugin-gramax-git/webview-src"]
		},

		"importHelpers": true,
		"importsNotUsedAsValues": "remove",

		"newLine": "crlf",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"preserveSymlinks": true,

		"jsx": "preserve",
		"allowJs": true,
		"checkJs": false
	},

	"include": [
		"./app/**/*",
		"./core/**/*",
		"./apps/**/*",
		"./services/**/*",
		"./storybook/**/*",
		"./storybook/.storybook/*",
		"./e2e/**/*",
		"./scripts/**/*",
		"./**/*.config.ts"
	],

	"exclude": [
		"target",
		"**/node_modules",
		"node_modules",
		"dist",
		"**/dist",
		".npm",
		"**/.npm",
		".next",
		"**/.next",
		".vite-cache",
		"**/.vite-cache",
		".git",
		"storybook/storybook-static",
		"services/**/Services/TSClassDiagram/files",
		"apps/tauri/src-tauri",
		"gx"
	],
}
