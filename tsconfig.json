{
	"compilerOptions": {
		"baseUrl": "./",
		"rootDir": "./",
		"declaration": true,
		"declarationMap": true,

		"target": "esnext",
		"experimentalDecorators": true,
		"noEmit": true,
		"lib": ["dom", "dom.iterable", "esnext"],

		"strict": false,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"incremental": true,

		"noImplicitOverride": false,
		"noImplicitThis": true,

		"noPropertyAccessFromIndexSignature": false,
		"strictFunctionTypes": false,
		"strictNullChecks": false,

		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "node",

		"paths": {
			"@components/*": ["core/components/*"],
			"@ext/*": ["core/extensions/*"],
			"@core/*": ["core/logic/*"],
			"@core-ui/*": ["core/ui-logic/*"],
			"@app/*": ["app/*"],
			"@app-plugins/git": ["apps/tauri/plugins/plugin-gramax-git/webview-src"]
		},

		"importHelpers": true,
		"importsNotUsedAsValues": "remove",

		"newLine": "crlf",
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"preserveSymlinks": true,

		"jsx": "preserve",
		"allowJs": true,
		"checkJs": false
	},

	"include": [
		"./app/**/*",
		"./core/**/*",
		"./apps/**/*",
		"./services/**/*",
		"./storybook/**/*",
		"./storybook/.storybook/*",
		"./e2e/**/*",
		"./scripts/**/*",
		"./**/*.config.ts",
	],

	"exclude": [
		"./**/node_modules",
		"./**/dist",
		"./storybook/storybook-static",
		"./apps/tauri/**/target",
		"./apps/tauri/src-tauri",
		"./apps/browser/wasm/dist",
		"./services/**/Services/TSClassDiagram/files"
	]
}
